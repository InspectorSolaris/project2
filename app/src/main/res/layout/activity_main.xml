<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="687dp" app:srcCompat="@drawable/background"
            android:id="@+id/imageViewBackground"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/main_background"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="84dp" app:srcCompat="@drawable/quiz_time"
            android:id="@+id/imageViewLogo" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintHorizontal_bias="0.0"
            android:contentDescription="@string/logo"/>
    <Button
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:id="@+id/buttonBegin" android:background="@drawable/my_shape"
            android:textColor="@color/colorPrimary"
            android:onClick="buttonProcessing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center" android:textSize="24sp"
            android:fontFamily="@font/Roboto-Regular" tools:text="@string/button_begin"
            android:text="@string/button_begin"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" app:layout_constraintHorizontal_bias="0.508"
            android:textAllCaps="false"/>
    <Button
            android:text="@string/button_exit"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:id="@+id/buttonExit" android:background="@drawable/my_shape"
            android:textColor="@color/colorPrimary" android:onClick="buttonProcessing"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center" android:textSize="24sp" android:fontFamily="@font/Roboto-Regular"
            tools:text="@string/button_exit"
            app:layout_constraintTop_toBottomOf="@+id/buttonBegin"
            app:layout_constraintHorizontal_bias="0.508"
            android:textAllCaps="false" android:layout_marginTop="20dp"/>
</android.support.constraint.ConstraintLayout>